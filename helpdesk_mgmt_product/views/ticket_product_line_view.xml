<odoo>
    <record model="ir.ui.view" id="helpdesk_ticket_product_line_form">
        <field name="model">helpdesk.ticket.product.line</field>
        <field name="arch" type="xml">
            <form string="Ticket Product Line" create="0" edit="0" delete="0">
                <group>
                    <field name="ticket_id" />
                    <field name="product_id" />
                    <field name="product_lot_id" domain="[('product_id', '=', product_id)]"/>
                    <field name="product_qty" />
                </group>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="helpdesk_ticket_product_line_tree">
        <field name="model">helpdesk.ticket.product.line</field>
        <field name="arch" type="xml">
            <tree string="Ticket Product Line" create="0" edit="0" delete="0">
                <field name="product_id" />
                <field name="ticket_id" />
                <field name="product_lot_id" domain="[('product_id', '=', product_id)]"/>
                <field name="product_qty" />
            </tree>
        </field>
    </record>
    <record id="action_helpdesk_ticket_product_line_tree" model="ir.actions.act_window">
        <field name="name">Ticket Product Line</field>
        <field name="res_model">helpdesk.ticket.product.line</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
