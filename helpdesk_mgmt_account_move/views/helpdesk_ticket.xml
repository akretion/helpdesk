<odoo>
    <record id="crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form (in helpdesk_mgmt_account_move)</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_account_move_out"
                    icon="fa-pencil-square-o"
                >
                    <field
                        name="account_move_out_count"
                        widget="statinfo"
                        string="Client invoice"
                    />
                </button>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_account_move_in"
                    icon="fa-pencil-square-o"
                >
                    <field
                        name="account_move_in_count"
                        widget="statinfo"
                        string="Supplier invoice"
                    />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
